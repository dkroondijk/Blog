<h1>All Comments</h1>

<%= form_tag comments_path, :method => "get" do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
<br>
<%= link_to "Create New Comment", new_comment_path %>
<br>
<br>
<br>
<% @comments.each do |comment| %>
  <%= link_to comment.body, comment_path(comment) %>
  <hr>
<% end %>